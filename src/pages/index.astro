---
import Layout from '@/layouts/Layout.astro'
import { Survey } from '@/components/Survey'
---

<Layout title="Bienvenido a Wenti.">
    <main>
        <div id="frame-wrapper" class="active relative">
            <span class="loading">Cargando prototipo...</span>
            <iframe
                class="w-[90vw] min-h-[90vh] mx-auto relative -top-[20px]"
                style="border: 1px solid rgba(0, 0, 0, 0.1);"
                src="https://www.figma.com/embed?embed_host=share&url=https%3A%2F%2Fwww.figma.com%2Fproto%2FfMJsGNfATsOy2WmBEYsOYC%2FUntitled%3Ftype%3Ddesign%26node-id%3D319-2%26t%3DUhL1HW3VoV0zYk1u-1%26scaling%3Dscale-down%26page-id%3D0%253A1%26starting-point-node-id%3D319%253A2%26mode%3Ddesign"
                allowfullscreen
                onload="document.getElementById('frame-wrapper').classList.remove('active')">
            </iframe>
        </div>

        <section id="survey">
            <Survey client:only />
        </section>
    </main>
</Layout>
